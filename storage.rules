rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() { return request.auth != null; }
    function isAdmin()  { return signedIn() && (request.auth.token.role in ['admin','superadmin']); }
    function isVendor() { return signedIn() && request.auth.token.role == 'vendor'; }

    match /product-images/{uid}/{allPaths=**} {
      allow read: if true;
      allow write: if isVendor() && request.auth.uid == uid || isAdmin();
    }

    match /kyc/{uid}/{allPaths=**} {
      allow read, write: if isAdmin() || (signedIn() && request.auth.uid == uid);
    }

    match /public/{allPaths=**} { allow read: if true; allow write: if isAdmin(); }
  }
}
